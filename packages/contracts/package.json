{
  "name": "contracts",
  "version": "0.1.0",
  "private": true,
  "description": "Smart contracts for Resume ZK platform",
  "scripts": {
    "build": "forge build",
    "test": "forge test",
    "test:verbose": "forge test -vvv",
    "coverage": "forge coverage",
    "deploy": "forge script script/deploy.sol --broadcast",
    "deploy:sepolia": "forge script script/deploy.sol --rpc-url sepolia --broadcast --verify",
    "deploy:mainnet": "forge script script/deploy.sol --rpc-url mainnet --broadcast --verify",
    "deploy:local": "forge script script/deploy.sol --rpc-url localhost --broadcast",
    "clean": "forge clean",
    "fmt": "forge fmt",
    "lint": "forge fmt --check"
  },
  "devDependencies": {
    "@types/node": "^20.0.0"
  }
}
